  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
  const bookedRanges = <%- JSON.stringify(bookedDates) %>;
</script>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-cards listing-card">
    <img src="<%= listing.image.url%>" alt="Image not found" class="card-img-top show-img"/>
    <div class="card-body">
      <p class="card-text">
        <p><i> <%= listing.owner.username %></i></p>
        <p><%= listing.description %></p>
        <p>&#8377; <%= (listing.price || 0).toLocaleString("en-IN") %> per night</p>
        <p><%= listing.location %></p>
        <p><%= listing.country %> </p>   
      </p>
    </div>
  </div>
  <br/>
  <% if (currentUser && listing.owner && currentUser._id.toString() !== listing.owner._id.toString()) { %>
  <div class="card col-6 offset-3 mt-4 p-3">
    <h5>Book this place</h5>
    <form action="/listings/<%= listing._id %>/book" method="POST">
      <div class="mb-2">
        <label>Check-In</label>
        <input type="date" name="booking[checkIn]" class="form-control" required>
      </div>
      <div class="mb-2">
        <label>Check-Out</label>
        <input type="date" name="booking[checkOut]" class="form-control" required>
      </div>
      <button class="btn btn-dark mt-2">Book Now</button>
    </form>
  </div>
<% } %>





  <div class="col-8 offset-3 mb-4 mt-4">
    
    <% if(currentUser) { %>
      <hr/>
    <h4 >Reviews</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
     
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating (1-5):</label>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
        <div class="invalid-feedback">
          Please leave a comment
      </div>
      <button type="submit" class="btn btn-outline-dark mb-3 mt-3">Submit</button>
    </form>
    <% } %>
    <% if(listing.reviews.length > 0) { %>

    <div class="row">
      <p><b>All reviews</b></p>
      <% for(let review of listing.reviews) { %>
        <div class="card mb-3 col-5 ms-3 me-3">
         <div class="card-body">
            <h4 class="card-title ">@<%= review.author.username %></h4>
            <p class="starability-result card-title" data-rating="<%= review.rating %>"></p>
            <p class="card-text"><%= review.comment %></p>
          </div>
          <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
          <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-dark btn-sm mb-3 mt-3">Delete</button>
          </form>
          <% } %>
        </div>
      <% } %>
    </div>
    <% } %>
  </div>
</div>
<div class="col-6 offset-3 mb-4 mt-4">
    <h4>Where you'll be</h4>
    <div id="map" ></div>
  </div>
<script src="/js/map.js"></script>


<script>
  const checkIn = document.querySelector('input[name="booking[checkIn]"]');

  checkIn.addEventListener("change", () => {
    const selected = new Date(checkIn.value);

    for (let range of bookedRanges) {
      const start = new Date(range.checkIn);
      const end = new Date(range.checkOut);

      if (selected >= start && selected <= end) {
        alert("This date is already booked");
        checkIn.value = "";
      }
    }
  });
</script>

